<div class="text-center">
  <div class="container col-6 py-5">

  <h2 class="mb-3 py-5" style="font-size:1.25rem">로그인</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off",placeholder: "******" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <%= f.check_box :remember_me, custom:true %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>
  
    <div class="actions mb-3">
      <%= f.submit "로그인", :class => 'btn btn-outline-primary' %>
    </div>
  <% end %>


<%= render "devise/shared/links" %>

  </div>
</div>
